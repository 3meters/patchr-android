<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.LobbyScreen">

	<ImageView
		android:id="@+id/image_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/patchr_splash" />

	<LinearLayout
		android:id="@+id/dialog"
		android:layout_width="228dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:paddingBottom="96dp"
		android:visibility="visible"
		tools:ignore="UselessParent">

		<ImageView
			android:id="@+id/logo"
			android:layout_width="72dp"
			android:layout_height="72dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="4dp"
			android:src="@drawable/ic_img_patch_dark" />

		<TextView
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="8dp"
			android:gravity="center"
			android:text="@string/name_app"
			android:textColor="@color/white"
			android:textSize="48sp" />

		<Button
			android:id="@+id/login_email_button"
			style="@style/button_raised"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:layout_marginBottom="8dp"
			android:textAllCaps="false"
			android:background="@drawable/bg_outlined_white"
			android:onClick="onClick"
			android:text="@string/splash_button_login_email"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:visibility="invisible"
			tools:visibility="visible" />

		<Button
			android:id="@+id/login_phone_button"
			style="@style/button_raised"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:textAllCaps="false"
			android:layout_marginBottom="8dp"
			android:background="@drawable/bg_outlined_white"
			android:onClick="onClick"
			android:text="@string/splash_button_login_phone"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:visibility="invisible"
			tools:visibility="visible" />
	</LinearLayout>

</RelativeLayout>