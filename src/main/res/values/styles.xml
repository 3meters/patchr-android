<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Application text styles -->

	<!--
		Android defaults

		textAppearance: 16sp
		textAppearanceLarge: 22sp
		textAppearanceMedium: 18sp
		textAppearanceSmall: 14sp
		textAppearanceSearchResultTitle: 18sp
		textAppearanceSearchResultSubtitle: 14sp
		textAppearanceButton: 14sp

		dialogWindowTitle: 18sp
		tabWidget: 14sp
		popupMenu: 18sp
		popupMenuLarge: 22sp
		popupMenuSmall: 14sp
		dropDownHint: 14sp
		windowTitle: 14sp
		holoActionBarTabText: 12sp
		holoButtonBorderlessSmall: 14sp
	-->
	<style name="base_text_appearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="text_appearance" parent="base_text_appearance">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="text_appearance_title" parent="text_appearance">
		<item name="android:textSize">30sp</item>
		<item name="android:textColor">@color/brand_accent_dark</item>
	</style>

	<style name="text_appearance_title_action_bar" parent="text_appearance">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/brand_accent_darker</item>
	</style>

	<style name="text_appearance_extra_large" parent="text_appearance">
		<item name="android:textSize">24sp</item>
	</style>

	<style name="text_appearance_large" parent="text_appearance">
		<item name="android:textSize">22sp</item>
	</style>

	<style name="text_appearance_medium_large" parent="text_appearance">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="text_appearance_medium" parent="text_appearance">
		<item name="android:textSize">18sp</item>
	</style>

	<style name="text_appearance_small" parent="text_appearance">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="text_appearance_extra_small" parent="text_appearance">
		<item name="android:textSize">12sp</item>
	</style>

	<style name="text_appearance_tiny" parent="text_appearance">
		<item name="android:textSize">11sp</item>
	</style>

	<style name="text_appearance_menu_item" parent="text_appearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<!-- App wide styles -->

	<style name="list_view" parent="Widget.AppCompat.ListView">
		<item name="android:background">?attr/backgroundForm</item>
	</style>

	<style name="text_view" parent="">
		<item name="android:textAppearance">@style/text_appearance</item>
	</style>

	<style name="progress">
		<item name="android:layout_centerInParent">true</item>
		<item name="android:padding">8dp</item>
		<item name="android:background">?attr/backgroundProgress</item>
	</style>

	<style name="bullet">
		<item name="android:textColor">?attr/textColorBullet</item>
	</style>

	<style name="selectable_item">
		<item name="android:background">?android:attr/selectableItemBackground</item>
	</style>

	<style name="selectable_image">
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
	</style>

	<!-- Edit forms -->

	<style name="form_edit" parent="Widget.AppCompat.EditText">
		<item name="android:textAppearance">@style/text_appearance</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
	</style>

	<style name="button_link" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textAllCaps">false</item>
		<item name="android:textAppearance">@style/text_appearance</item>
		<item name="android:textColor">?attr/textColorButtonLink</item>
	</style>

	<style name="button_flat" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textAllCaps">true</item>
		<item name="android:textAppearance">@style/text_appearance</item>
		<item name="android:textColor">?attr/textColorButtonLink</item>
	</style>

	<style name="button_outlined" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textAllCaps">true</item>
		<item name="android:textAppearance">@style/text_appearance_small</item>
		<item name="android:background">?attr/backgroundButtonLink</item>
		<item name="android:textColor">?attr/textColorButtonLink</item>
	</style>

	<style name="button_raised" parent="Widget.AppCompat.Button">
		<item name="android:textAllCaps">true</item>
		<item name="android:textAppearance">@style/text_appearance</item>
		<item name="android:textColor">?attr/textColorButtonLink</item>
	</style>

	<style name="button_featured" parent="Widget.AppCompat.Button.Colored">
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="button_primary_overlay" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@color/brand_primary</item>
	</style>

	<style name="empty_message">
		<item name="android:padding">10dp</item>
		<item name="android:minWidth">200dp</item>
		<item name="android:textAppearance">@style/text_appearance</item>
		<item name="android:textColor">?attr/textColorSecondary</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">false</item>
		<item name="android:background">?attr/backgroundButtonRound</item>
	</style>

</resources>