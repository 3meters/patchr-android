<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	android:fillViewport="true">

	<!-- Content -->

	<RelativeLayout
		style="@style/form_content_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|top"
		android:orientation="vertical">

		<!-- Public Image -->

		<com.aircandi.ui.widgets.AirImageView
			android:id="@+id/photo"
			style="@style/selectable_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:layout_marginBottom="8dp"
			android:onClick="onChangePhotoButtonClick"
			android:scaleType="centerCrop"
			custom:aspectRatio="@dimen/aspect_ratio_place_image"
			custom:aspectRatioEnabled="true"
			custom:dominantMeasurement="width"
			custom:layout="@layout/widget_webimageview_candi_view"
			custom:sizeHint="@dimen/image_super_large"
			custom:sizeType="preview_large" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/form_field_height"
			android:layout_alignBottom="@+id/photo"
			android:background="@drawable/scrim_gradient_medium"
			android:orientation="vertical">

			<com.aircandi.ui.widgets.AirTextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="?attr/textColorCandiView"
				android:text="@string/button_change_banner" />

		</LinearLayout>

		<!-- Title and Content -->

		<LinearLayout
			android:id="@+id/holder_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/photo"
			android:layout_marginBottom="8dp"
			android:orientation="vertical">

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:gravity="center_vertical"
				android:layout_marginBottom="8dp"
				android:layout_weight="0"
				android:ellipsize="end"
				android:maxLines="2"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="24sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:orientation="horizontal">

				<com.aircandi.ui.widgets.ComboButton
					android:id="@+id/button_tune"
					style="@style/button_link"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/button_height"
					android:layout_marginRight="4dp"
					android:layout_weight="0.5"
					android:onClick="onTuneButtonClick"
					custom:label="@string/button_tuning_tune" />

				<com.aircandi.ui.widgets.ComboButton
					android:id="@+id/button_untune"
					style="@style/button_link"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/button_height"
					android:layout_marginLeft="4dp"
					android:layout_weight="0.5"
					android:onClick="onUntuneButtonClick"
					android:visibility="gone"
					custom:label="@string/button_tuning_untune" />
			</LinearLayout>

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/label_tune"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				custom:textId="@string/label_tuning_tune_no_name" />

		</LinearLayout>
	</RelativeLayout>

</com.aircandi.ui.widgets.AirScrollView>