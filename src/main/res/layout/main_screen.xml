<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.MainScreen">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<com.patchr.ui.widgets.AirDrawerLayout
		android:id="@+id/drawer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.design.widget.CoordinatorLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<FrameLayout
				android:id="@+id/fragment_holder"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_centerHorizontal="true"
				android:background="?attr/backgroundCardField" />

			<android.support.design.widget.FloatingActionButton
				android:id="@+id/fab"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|bottom"
				android:layout_margin="16dp"
				android:clickable="true"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/ic_add_dark"
				custom:borderWidth="0dp"
				custom:elevation="4dp"
				custom:layout_behavior="com.patchr.ui.components.ScrollAwareFabBehavior"
				custom:useCompatPadding="true"
				tools:visibility="visible" />

		</android.support.design.widget.CoordinatorLayout>

		<!-- Navigation drawer -->

		<FrameLayout
			android:id="@+id/left_drawer"
			android:layout_width="240dp"
			android:layout_height="match_parent"
			android:layout_gravity="left|start"
			android:background="?attr/backgroundForm">

			<include layout="@layout/widget_drawer_start" />
		</FrameLayout>

		<!-- Notifications drawer -->

		<RelativeLayout
			android:id="@+id/right_drawer"
			android:layout_width="320dp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:background="?attr/backgroundForm">

			<FrameLayout
				android:id="@+id/fragment_holder_notifications"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />

		</RelativeLayout>

	</com.patchr.ui.widgets.AirDrawerLayout>
</LinearLayout>
