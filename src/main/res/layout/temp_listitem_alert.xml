<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/item_row"
	style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:clickable="true"
	android:onClick="onEntityClick"
	android:padding="10dp">

	<!-- Place context -->

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/user_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_alignTop="@+id/holder_content"
		android:layout_marginRight="10dp"
		android:layout_marginTop="2dp"
		android:clickable="true"
		android:onClick="onEntityClick"
		android:src="@drawable/img_placeholder_logo_bw"
		custom:sizeHint="@dimen/image_small"
		custom:sizeType="thumbnail" />

	<LinearLayout
		android:id="@+id/holder_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/user_photo"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/holder_author"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:orientation="horizontal">

			<com.aircandi.ui.widgets.AirTextMedium
				android:id="@+id/user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_gravity="center_vertical"
				android:layout_toLeftOf="@+id/created_date"
				android:ellipsize="end"
				android:maxWidth="150dp"
				android:minWidth="100dp"
				android:singleLine="true"
				android:textStyle="bold" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/created_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:textColor="?attr/textColorSecondary" />
		</RelativeLayout>

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="5" />

	</LinearLayout>

</RelativeLayout>