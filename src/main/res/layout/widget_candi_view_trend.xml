<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/candi_view_group"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<View
		android:id="@+id/highlight"
		android:layout_width="match_parent"
		android:layout_height="@dimen/rule_highlight_height"
		android:layout_alignParentTop="true"
		android:background="?attr/cardHighlightColor" />

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_medium_small"
		android:layout_height="@dimen/image_medium_small"
		android:layout_marginRight="10dp"
		android:scaleType="centerCrop"
		custom:layout="@layout/widget_webimageview_candi_view"
		custom:sizeHint="@dimen/image_medium_small"
		custom:fitType="fixed" />

	<com.aircandi.ui.widgets.AirTextLight
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_toRightOf="@+id/photo"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold"
		custom:textId="@string/dummy_title_short"
		tools:text="Dillons Fabulous Party" />

	<LinearLayout
		android:id="@+id/subtitle_group"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/name"
		android:layout_below="@+id/name"
		android:layout_marginBottom="5dp"
		android:layout_marginRight="10dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAllCaps="true"
			android:textAppearance="?attr/textAppearanceExtraSmall"
			android:textColor="?attr/textColorSecondary"
			tools:text="Event or place" />

		<LinearLayout
			android:id="@+id/privacy_group"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginRight="4dp"
				android:maxHeight="20dp"
				android:maxWidth="20dp"
				android:scaleType="fitCenter"
				android:src="@drawable/ic_action_lock_closed_dark"
				android:tint="@color/brand_primary" />

			<com.aircandi.ui.widgets.AirTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/label_place_privacy_private"
				android:textAllCaps="true"
				android:textAppearance="?attr/textAppearanceExtraSmall"
				android:textColor="@color/brand_primary"
				tools:text="@string/label_place_privacy_private" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/photo"
		android:layout_alignLeft="@+id/name"
		android:layout_below="@+id/subtitle_group"
		android:gravity="bottom"
		android:orientation="horizontal"
		android:paddingBottom="4dp">

		<com.aircandi.ui.widgets.AirTextMedium
			android:id="@+id/count_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			tools:text="24" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/count_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAllCaps="true"
			android:textAppearance="?attr/textAppearanceExtraSmall"
			android:textColor="?textColorSecondary"
			tools:text="Messages" />
	</LinearLayout>

	<com.aircandi.ui.widgets.AirTextLight
		android:id="@+id/rank"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/photo"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10dp"
		android:paddingBottom="5dp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/brand_primary"
		tools:text="10" />

	<View
		android:id="@+id/shadow"
		android:layout_width="match_parent"
		android:layout_height="@dimen/rule_shadow_height"
		android:layout_alignParentBottom="true"
		android:background="?attr/cardShadowColor" />

</RelativeLayout>