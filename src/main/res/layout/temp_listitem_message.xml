<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/item_row"
	style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:clickable="true"
	android:onClick="onViewClick"
	android:padding="10dp">

	<ImageView
		android:id="@+id/alert_indicator"
		android:layout_width="@dimen/image_micro"
		android:layout_height="@dimen/image_micro"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/img_blue_dot"
		android:visibility="invisible" />

	<!-- Patch context -->

	<LinearLayout
		android:id="@+id/holder_patch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/holder_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/patch_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="8dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/text_appearance_small"
			android:textColor="?attr/textColorSecondary" />

		<ImageView
			android:id="@+id/badge_type"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_gravity="bottom"
			android:src="?attr/iconWatch"
			android:visibility="gone" />
	</LinearLayout>

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/user_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_alignTop="@+id/holder_content"
		android:layout_marginRight="10dp"
		android:layout_marginTop="2dp"
		android:clickable="true"
		android:onClick="onViewClick"
		custom:config="rgb_565"
		custom:fitType="fixed"
		custom:sizeCategory="profile"
		custom:sizeHint="@dimen/image_small" />

	<LinearLayout
		android:id="@+id/holder_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/holder_patch"
		android:layout_toRightOf="@+id/user_photo"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/holder_author"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:orientation="horizontal">

			<com.aircandi.ui.widgets.AirTextMedium
				android:id="@+id/user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_gravity="center_vertical"
				android:layout_toLeftOf="@+id/created_date"
				android:ellipsize="end"
				android:maxWidth="150dp"
				android:minWidth="100dp"
				android:singleLine="true"
				android:textStyle="bold"
				tools:text="@string/dummy_username" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/created_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:textColor="?attr/textColorSecondary"
				tools:text="@string/dummy_timesince_short" />
		</RelativeLayout>

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="5"
			tools:text="@string/dummy_message" />

		<!-- Photo -->

		<com.aircandi.ui.widgets.AirImageView
			android:id="@+id/photo"
			style="@style/selectable_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="12dp"
			android:background="?attr/backgroundPlaceholder"
			android:clickable="true"
			android:onClick="onPhotoClick"
			android:scaleType="centerCrop"
			custom:aspectRatio="@dimen/aspect_ratio_message_item_image"
			custom:aspectRatioEnabled="true"
			custom:config="rgb_565"
			custom:dominantMeasurement="width"
			custom:fitType="auto"
			custom:sizeCategory="standard"
			custom:layoutId="@layout/widget_imageview" />

		<!-- Share entity -->

		<RelativeLayout
			android:id="@+id/share_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="12dp"
			android:visibility="gone">

			<android.support.v7.widget.CardView
				android:id="@+id/share_entity"
				style="@style/selectable_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:onClick="onViewClick"
				custom:cardBackgroundColor="?attr/backgroundButtonShare"
				custom:cardCornerRadius="3dp"
				custom:cardElevation="2dp"
				custom:cardUseCompatPadding="true"
				custom:contentPadding="4dp" />

		</RelativeLayout>

		<!-- Footer -->

		<RelativeLayout
			android:id="@+id/footer_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp">

			<LinearLayout
				android:id="@+id/button_message_likes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginRight="12dp"
				android:visibility="gone"
				android:orientation="horizontal"
				tools:ignore="UselessParent">

				<com.aircandi.ui.widgets.AirTextMedium
					android:id="@+id/likes_count"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginRight="4dp"
					android:gravity="center_vertical"
					android:textColor="@color/brand_primary_dark"
					tools:text="12" />

				<com.aircandi.ui.widgets.AirTextLight
					android:id="@+id/likes_label"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/label_button_likes"
					android:textColor="@color/brand_primary_dark" />
			</LinearLayout>

		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>