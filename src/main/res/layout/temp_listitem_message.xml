<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/item_row"
	style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:clickable="true"
	android:onClick="onEntityClick"
	android:padding="10dp">

	<ImageView
		android:id="@+id/alert_indicator"
		android:layout_width="@dimen/image_micro"
		android:layout_height="@dimen/image_micro"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/img_blue_dot"
		android:visibility="invisible" />

	<!-- Place context -->

	<LinearLayout
		android:id="@+id/holder_place"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/holder_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/place_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="8dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/text_appearance_small"
			android:textColor="?attr/textColorSecondary" />

		<ImageView
			android:id="@+id/badge_type"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_gravity="bottom"
			android:src="?attr/iconWatch"
			android:visibility="gone" />
	</LinearLayout>

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/user_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_alignTop="@+id/holder_content"
		android:layout_marginRight="10dp"
		android:layout_marginTop="2dp"
		android:clickable="true"
		android:onClick="onEntityClick"
		android:src="@drawable/img_placeholder_logo_bw"
		custom:fitType="fixed"
		custom:sizeHint="@dimen/image_small" />

	<LinearLayout
		android:id="@+id/holder_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/holder_place"
		android:layout_toRightOf="@+id/user_photo"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/holder_author"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/created_date"
				android:orientation="horizontal">

				<com.aircandi.ui.widgets.AirTextMedium
					android:id="@+id/user_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:ellipsize="end"
					android:maxWidth="150dp"
					android:minWidth="100dp"
					android:singleLine="true"
					android:textStyle="bold" />

				<ImageView
					android:id="@+id/symbol_at"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="1dp"
					android:paddingTop="2dp"
					android:src="@drawable/ic_action_playback_play"
					android:tint="@color/brand_primary" />

				<com.aircandi.ui.widgets.AirTextLight
					android:id="@+id/to_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:ellipsize="end"
					android:maxWidth="150dp"
					android:minWidth="100dp"
					android:singleLine="true"
					android:textColor="?attr/textSelector" />

			</LinearLayout>

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/created_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:textColor="?attr/textColorSecondary" />
		</RelativeLayout>

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="5" />

		<!-- Photo -->

		<com.aircandi.ui.widgets.AirImageView
			android:id="@+id/photo"
			style="@style/selectable_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="12dp"
			android:scaleType="centerCrop"
			custom:aspectRatio="@dimen/aspect_ratio_message_item_image"
			custom:aspectRatioEnabled="true"
			custom:dominantMeasurement="width"
			custom:fitType="auto"
			custom:layout="@layout/widget_webimageview" />

		<!-- Share entity -->

		<RelativeLayout
			android:id="@+id/share_holder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="12dp">

			<FrameLayout
				android:id="@+id/share"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/backgroundButtonShare"
				android:clickable="true"
				android:onClick="onEntityClick" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/rule_highlight_height"
				android:layout_alignTop="@id/share"
				android:background="?attr/cardHighlightColor" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/rule_shadow_height"
				android:layout_alignBottom="@id/share"
				android:background="?attr/cardShadowColor" />

		</RelativeLayout>

		<!-- Footer -->

		<RelativeLayout
			android:id="@+id/footer_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp">

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/child_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/brand_primary" />
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>