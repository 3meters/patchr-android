<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<View
		style="@style/selectable_item"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:duplicateParentState="true" />

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/rule_divider_height"
		android:layout_alignParentTop="true"
		android:background="?attr/ruleColor" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:orientation="horizontal"
		android:paddingLeft="8dp"
		android:paddingRight="8dp">

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/button_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="8dp"
			android:ellipsize="end"
			android:maxWidth="@dimen/footer_label_max_width"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/brand_primary" />

		<ImageView
			android:id="@+id/button_image"
			android:layout_width="@dimen/image_combo_button"
			android:layout_height="@dimen/image_combo_button"
			android:src="?attr/iconSend" />
	</LinearLayout>

</merge>