<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingRight="8dp">

	<ImageView
		android:id="@+id/indicator_image"
		android:layout_marginTop="-4dp"
		android:layout_width="14dp"
		android:layout_height="14dp"
		android:layout_centerVertical="true"
		android:layout_marginRight="4dp"
		android:maxHeight="14dp"
		android:maxWidth="14dp"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_img_message_light"
		android:tint="@color/brand_primary" />

	<com.patchr.ui.widgets.AirTextLight
		android:id="@+id/indicator_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/indicator_image"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		tools:text="@string/dummy_message" />

</RelativeLayout>