<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="4dp"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	android:paddingTop="4dp">

	<LinearLayout
		android:id="@+id/holder_body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/photo"
		android:orientation="vertical">

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			custom:textId="@string/dummy_title_short"
			tools:text="@string/dummy_title_short" />

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAllCaps="true"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?attr/textColorSecondary"
			android:visibility="gone"
			custom:textId="@string/dummy_category_name"
			tools:text="@string/dummy_category_name" />

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/subhead"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?attr/textColorSecondary"
			custom:textId="@string/dummy_subtitle"
			tools:text="@string/dummy_subtitle" />
	</LinearLayout>

	<com.patchr.ui.views.ImageLayout
		android:id="@+id/photo"
		style="@style/selectable_image"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		custom:category="profile"
		custom:shape="round"
		custom:showBusy="false" />

</RelativeLayout>