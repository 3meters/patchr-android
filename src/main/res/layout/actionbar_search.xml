<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/action_button_height">

	<FrameLayout
		android:id="@+id/search_action_holder"
		android:layout_width="@dimen/action_button_height"
		android:layout_height="@dimen/action_button_height">

		<ImageView
			android:id="@+id/search_image"
			android:layout_width="@dimen/action_button_height"
			android:layout_height="@dimen/action_button_height"
			android:padding="4dp"
			android:src="?attr/iconActionSearch" />

		<ProgressBar
			android:id="@+id/search_progress"
			android:layout_width="@dimen/action_button_height"
			android:layout_height="@dimen/action_button_height"
			android:padding="4dp"
			android:visibility="gone" />

	</FrameLayout>

	<com.aircandi.ui.widgets.AirAutoCompleteTextView
		android:id="@+id/search_input"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@+id/search_action_holder"
		android:completionHint="@string/label_search_completion_hint"
		android:completionHintView="@layout/dropdown_search_hint"
		android:drawableRight="?attr/iconClear"
		android:dropDownHorizontalOffset="-90dp"
		android:dropDownWidth="match_parent"
		android:hint="@string/label_search_hint"
		android:imeOptions="flagNoExtractUi"
		android:textColor="?attr/textColorPure"
		android:textColorHint="?attr/textColorHint" />

</RelativeLayout>

