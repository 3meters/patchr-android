<?xml version="1.0" encoding="utf-8"?>

<com.flipboard.bottomsheet.BottomSheetLayout

	android:id="@+id/bottomsheet"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.LobbyScreen">

		<ImageView
			android:id="@+id/image_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/patchr_splash" />

		<LinearLayout
			android:id="@+id/dialog"
			android:layout_width="228dp"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:alpha="0"
			android:orientation="vertical"
			android:paddingBottom="96dp"
			android:visibility="visible"
			tools:alpha="1"
			tools:ignore="UselessParent"
			tools:visibility="visible">

			<ImageView
				android:id="@+id/logo"
				android:layout_width="72dp"
				android:layout_height="72dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="4dp"
				android:src="@drawable/ic_img_patch_dark" />

			<TextView
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="8dp"
				android:gravity="center"
				android:text="@string/name_app"
				android:textColor="@color/white"
				android:textSize="48sp" />

			<Button
				android:id="@+id/login_button"
				style="@style/button_raised"
				android:layout_width="match_parent"
				android:layout_height="@dimen/button_height"
				android:layout_marginBottom="8dp"
				android:background="@drawable/bg_outlined_white"
				android:onClick="onClick"
				android:text="@string/lobby_button_login"
				android:textColor="@color/white"
				android:textSize="16sp" />

			<Button
				android:id="@+id/submit_button"
				style="@style/button_raised"
				android:layout_width="match_parent"
				android:layout_height="@dimen/button_height"
				android:layout_marginBottom="8dp"
				android:background="@drawable/bg_outlined_white"
				android:onClick="onClick"
				android:text="@string/lobby_button_signup"
				android:textColor="@color/white"
				android:textSize="16sp" />

			<TextView
				android:id="@+id/message"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:gravity="center"
				android:paddingTop="8dp"
				android:text="@string/label_lobby_accountkit"
				android:textColor="@color/white"
				android:textSize="16sp" />

		</LinearLayout>

		<Button
			android:id="@+id/guest_button"
			style="@style/button_link"
			android:layout_width="228dp"
			android:layout_height="@dimen/button_height"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="96dp"
			android:gravity="center"
			android:onClick="onClick"
			android:text="@string/lobby_button_guest"
			android:visibility="invisible"
			tools:visibility="visible"
			android:textColor="@color/white"
			android:textSize="18sp" />

	</RelativeLayout>

</com.flipboard.bottomsheet.BottomSheetLayout>

