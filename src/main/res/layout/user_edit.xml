<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<com.aircandi.ui.widgets.AirRelativeLayout
		style="@style/form_content_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<!-- User picture -->

		<RelativeLayout
			android:id="@+id/photo_holder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="4dp"
			android:orientation="horizontal">

			<com.aircandi.ui.widgets.AirImageView
				android:id="@+id/photo"
				style="@style/selectable_image"
				android:layout_width="@dimen/image_extra_large"
				android:layout_height="@dimen/image_extra_large"
				android:layout_marginRight="8dp"
				android:background="?attr/backgroundPlaceholder"
				android:clickable="true"
				android:minWidth="@dimen/image_extra_large"
				android:onClick="onChangePhotoButtonClick"
				android:scaleType="centerCrop"
				custom:config="rgb_565"
				custom:fitType="fixed"
				custom:layoutId="@layout/widget_imageview_candi_view"
				custom:showBusy="true"
				custom:sizeHint="@dimen/image_extra_large" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@+id/photo"
				android:layout_alignRight="@+id/photo"
				android:layout_alignTop="@+id/photo"
				android:background="@drawable/scrim_medium"
				android:gravity="bottom|center_horizontal"
				android:orientation="vertical">

				<com.aircandi.ui.widgets.AirTextView
					android:layout_width="wrap_content"
					android:layout_height="@dimen/form_field_height"
					android:layout_gravity="center_horizontal"
					android:drawableLeft="@drawable/ic_action_edit_dark"
					android:gravity="center"
					android:text="@string/button_change_picture"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="?attr/textColorCandiView" />

			</LinearLayout>
		</RelativeLayout>

		<!-- Full name -->

		<LinearLayout
			android:id="@+id/holder_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/photo_holder"
			android:layout_marginBottom="8dp"
			android:orientation="vertical">

			<com.aircandi.ui.widgets.AirEditText
				android:id="@+id/name"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_fullname"
				android:inputType="textCapWords|textPersonName|textNoSuggestions" />

			<com.aircandi.ui.widgets.AirEditText
				android:id="@+id/area"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_location"
				android:inputType="textPostalAddress|textAutoCorrect" />

			<com.aircandi.ui.widgets.AirEditText
				android:id="@+id/email"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="15dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_email"
				android:inputType="textEmailAddress" />

			<Button
				android:id="@+id/button_change_password"
				style="@style/button_link"
				android:layout_width="match_parent"
				android:layout_height="@dimen/button_height"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:minWidth="200dp"
				android:onClick="onChangePasswordButtonClick"
				android:text="@string/button_change_password" />
		</LinearLayout>
	</com.aircandi.ui.widgets.AirRelativeLayout>

</LinearLayout>