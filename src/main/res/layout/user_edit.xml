<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.edit.UserEdit">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<com.patchr.ui.widgets.AirScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:fillViewport="true">

		<!-- Content -->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp">

			<!-- User picture -->

			<RelativeLayout
				android:id="@+id/photo_edit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">

				<com.patchr.ui.views.ImageLayout
					android:id="@+id/photo"
					style="@style/selectable_image"
					android:layout_width="@dimen/image_extra_large"
					android:layout_height="@dimen/image_extra_large"
					android:layout_centerHorizontal="true"
					android:background="?attr/backgroundRoundedPlaceholder"
					android:clickable="true"
					android:minWidth="@dimen/image_extra_large"
					android:onClick="onChangePhotoButtonClick"
					custom:category="standard"
					custom:radius="16"
					custom:shape="rounded" />

				<ImageButton
					android:id="@+id/button_photo_set"
					style="@style/button_flat"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_centerInParent="true"
					android:background="@drawable/bg_round"
					android:backgroundTint="#bbffffff"
					android:clickable="true"
					android:onClick="onChangePhotoButtonClick"
					android:src="@drawable/ic_action_camera_dark"
					android:text="@string/button_set_picture"
					android:textAppearance="?android:attr/textAppearance"
					android:tint="@color/brand_primary" />

				<ImageButton
					android:id="@+id/button_photo_edit"
					style="@style/button_flat"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:layout_alignBottom="@+id/photo"
					android:layout_alignRight="@+id/photo"
					android:layout_margin="8dp"
					android:background="@drawable/bg_round"
					android:backgroundTint="#bbffffff"
					android:foregroundTint="@color/brand_primary"
					android:clickable="true"
					android:onClick="onEditPhotoButtonClick"
					android:src="@drawable/ic_action_edit_dark"
					android:textAppearance="?android:attr/textAppearance"
					android:textColor="?attr/textColorCandiView"
					android:tint="@color/brand_primary" />

				<ImageButton
					android:id="@+id/button_photo_delete"
					style="@style/button_flat"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:layout_alignBottom="@+id/photo"
					android:layout_alignLeft="@+id/photo"
					android:layout_margin="8dp"
					android:layout_marginBottom="8dp"
					android:background="@drawable/bg_round"
					android:backgroundTint="#bbffffff"
					android:clickable="true"
					android:gravity="center"
					android:onClick="onDeletePhotoButtonClick"
					android:src="@drawable/ic_action_cancel_dark"
					android:textAppearance="?android:attr/textAppearance"
					android:textColor="?attr/textColorCandiView"
					android:tint="@color/brand_primary" />

			</RelativeLayout>

			<!-- Full name -->

			<LinearLayout
				android:id="@+id/holder_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:orientation="vertical">

				<com.patchr.ui.widgets.AirEditText
					android:id="@+id/name"
					style="@style/form_edit"
					android:layout_width="match_parent"
					android:layout_height="@dimen/form_field_height"
					android:drawableRight="?attr/iconClear"
					android:hint="@string/label_fullname"
					android:inputType="textCapWords|textPersonName|textNoSuggestions" />

				<com.patchr.ui.widgets.AirEditText
					android:id="@+id/area"
					style="@style/form_edit"
					android:layout_width="match_parent"
					android:layout_height="@dimen/form_field_height"
					android:drawableRight="?attr/iconClear"
					android:hint="@string/label_location"
					android:inputType="textPostalAddress|textAutoCorrect" />

				<com.patchr.ui.widgets.AirEditText
					android:id="@+id/email"
					style="@style/form_edit"
					android:layout_width="match_parent"
					android:layout_height="@dimen/form_field_height"
					android:layout_marginBottom="15dp"
					android:drawableRight="?attr/iconClear"
					android:hint="@string/label_email"
					android:inputType="textEmailAddress" />

				<Button
					android:id="@+id/button_change_password"
					style="@style/button_link"
					android:layout_width="match_parent"
					android:layout_height="@dimen/button_height"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:minWidth="200dp"
					android:onClick="onChangePasswordButtonClick"
					android:text="@string/button_change_password" />
			</LinearLayout>
		</LinearLayout>

	</com.patchr.ui.widgets.AirScrollView>

</LinearLayout>