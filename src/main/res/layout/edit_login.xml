<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:fillViewport="true">

		<LinearLayout
			android:layout_width="288dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="16dp"
			android:orientation="vertical">

			<!-- Title and Content -->

			<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="8dp"
				android:text="@string/form_title_login_edit"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/brand_accent_darker"
				android:textSize="30sp" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/email"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_email"
				android:inputType="textEmailAddress" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/password"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="0dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_password"
				android:imeOptions="actionGo"
				android:inputType="textPassword" />

			<CheckBox
				android:id="@+id/chk_unmask"
				style="@style/form_checkbox"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:text="@string/label_password_unmask"
				android:textAppearance="?android:attr/textAppearance" />

			<Button
				android:id="@+id/forgot_password_button"
				style="@style/button_flat"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_weight="1"
				android:onClick="onClick"
				android:text="@string/button_forgot_password" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<View
					android:layout_width="match_parent"
					android:layout_height="@dimen/button_height"
					android:background="@color/brand_primary" />

				<Button
					android:id="@+id/login_button"
					style="@style/button_link"
					android:layout_width="match_parent"
					android:layout_height="@dimen/button_height"
					android:minWidth="200dp"
					android:onClick="onClick"
					android:text="@string/button_sign_in"
					android:textColor="@color/white" />
			</RelativeLayout>

		</LinearLayout>
	</ScrollView>

</LinearLayout>