<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	style="@style/selectable_image"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	custom:cardBackgroundColor="?attr/backgroundCard"
	custom:cardCornerRadius="3dp"
	custom:cardElevation="2dp"
	custom:contentPadding="4dp"
	custom:cardUseCompatPadding="true">

	<com.patchr.ui.widgets.CandiView
		android:id="@+id/candi_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/backgroundCard"
		custom:layoutRef="@layout/widget_candi_view_nearby" />
</android.support.v7.widget.CardView>