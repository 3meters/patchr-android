<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<com.patchr.ui.widgets.AirImageView
		android:id="@+id/entity_view_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_marginRight="5dp"
		android:scaleType="centerCrop"
		custom:config="rgb_565"
		custom:fitType="fixed"
		custom:layoutId="@layout/widget_imageview_framed"
		custom:showBusy="true"
		custom:sizeCategory="thumbnail"
		custom:sizeHint="@dimen/image_small" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:orientation="vertical">

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/entity_view_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.33"
			android:ellipsize="end"
			android:gravity="bottom"
			android:singleLine="true"
			android:text="@string/dummy_label"
			android:textAppearance="@style/text_appearance_small"
			android:textColor="?attr/textColorSecondary" />

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/entity_view_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.33"
			android:ellipsize="end"
			android:gravity="top"
			android:singleLine="true"
			android:text="@string/dummy_title"
			android:textAppearance="@style/text_appearance_small"
			custom:textId="@string/dummy_title" />

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/entity_view_subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.33"
			android:ellipsize="end"
			android:gravity="top"
			android:singleLine="true"
			android:text="@string/dummy_title"
			android:textAppearance="@style/text_appearance_small"
			custom:textId="@string/dummy_subtitle" />
	</LinearLayout>

</LinearLayout>