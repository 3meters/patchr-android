<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto">

	<ProgressBar
		android:id="@+id/image_progress"
		android:layout_width="@dimen/progress_small_width"
		android:layout_height="@dimen/progress_small_height"
		android:layout_gravity="center"
		android:focusable="true"
		android:visibility="gone" />

	<com.aircandi.ui.widgets.AirTextView
		android:id="@+id/image_missing"
		style="@style/missing"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/bg_placeholder_dark"
		android:gravity="center"
		android:text="@string/label_photo_missing"
		android:textColor="@color/text_secondary_dark"
		android:visibility="gone"
		custom:textId="@string/label_photo_missing" />

	<it.sephiroth.android.library.imagezoom.ImageViewTouch
		android:id="@+id/image_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:ignore="MissingRegistered" />

</merge>