<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<com.patchr.ui.widgets.UserPhotoView
		android:id="@+id/widget_photo"
		style="@style/selectable_image"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="4dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		custom:sizeCategory="profile" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/widget_photo"
		android:orientation="vertical">

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/widget_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/brand_primary_dark"
			android:textAppearance="?android:attr/textAppearance"
			custom:textId="@string/label_drawer_item_nearby" />

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/area"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

</RelativeLayout>