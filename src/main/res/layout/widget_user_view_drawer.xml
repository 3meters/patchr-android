<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="8dp">

	<com.patchr.ui.views.ImageLayout
		android:id="@+id/widget_photo"
		style="@style/selectable_image"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="10dp"
		custom:category="profile"
		custom:shape="round" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/widget_photo"
		android:orientation="vertical">

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/widget_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearance"
			android:textColor="@color/brand_primary_dark"
			android:text="@string/label_drawer_item_nearby" />

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/area"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>

</RelativeLayout>