<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<!-- Content -->

		<LinearLayout
			android:layout_width="288dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="16dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:gravity="center_horizontal"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="8dp"
				android:text="@string/form_title_reset_edit"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/brand_accent_darker"
				android:textSize="28sp" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/email"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_email"
				android:inputType="textEmailAddress" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/password"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_password"
				android:inputType="textPassword"
				android:visibility="gone" />

			<Button
				android:id="@+id/signup_button"
				style="@style/button_link"
				android:layout_width="match_parent"
				android:layout_height="@dimen/button_height"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:onClick="resetAction"
				android:text="@string/button_reset_password" />
		</LinearLayout>

	</ScrollView>
</LinearLayout>