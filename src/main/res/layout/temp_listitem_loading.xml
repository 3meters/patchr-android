<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher android:id="@+id/paging_button"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60sp"
              android:background="?attr/backgroundCardField"
              android:padding="8dp">

	<com.patchr.ui.widgets.AirTextLight
		android:id="@+id/next_page_button"
		style="@style/selectable_image"
		android:layout_width="match_parent"
		android:layout_height="@dimen/button_height"
		android:background="@color/white"
		android:gravity="center"
		android:maxLines="1"
		android:text="@string/label_list_more"
		android:textAllCaps="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@color/selector_link_text" />

	<ProgressBar
		android:id="@+id/next_page_progress"
		android:layout_width="44dp"
		android:layout_height="44dp"
		android:layout_gravity="center"
		android:padding="8dp" />

</ViewSwitcher>