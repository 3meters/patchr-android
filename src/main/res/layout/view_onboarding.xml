<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background_form"
	android:padding="16dp">

	<LinearLayout
		android:id="@+id/invite"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/user_photo"
			android:layout_width="@dimen/image_medium_small"
			android:layout_height="@dimen/image_medium_small"
			android:scaleType="centerCrop"
			tools:src="@drawable/img_dummy" />

		<TextView
			android:id="@+id/message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			android:textColor="@color/black"
			tools:text="Larissa Massena invited you to join this patch." />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/buttons"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/invite"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="16dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/action1_button"
			style="@style/button_outlined"
			android:layout_width="110dp"
			android:layout_height="@dimen/button_height"
			android:layout_marginRight="4dp"
			android:layout_marginEnd="4dp"
			android:text="@string/button_login"
			android:textSize="16sp"
			tools:text="LOG IN" />

		<Button
			android:id="@+id/action2_button"
			style="@style/button_outlined"
			android:layout_width="110dp"
			android:layout_height="@dimen/button_height"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
			android:text="@string/button_signup"
			android:textSize="16sp"
			tools:text="SIGN UP" />
	</LinearLayout>

</RelativeLayout>
