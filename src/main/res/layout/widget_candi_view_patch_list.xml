<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/candi_view_group"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/image_medium_large">

	<com.patchr.ui.views.ImageLayout
		android:id="@+id/photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_medium_large"
		android:layout_height="@dimen/image_medium_large"
		custom:category="thumbnail" />

	<com.patchr.ui.widgets.AirTextView
		android:id="@+id/index"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_margin="4dp"
		android:background="@drawable/bg_round_scrim"
		android:gravity="center"
		android:visibility="gone"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="@color/white"
		tools:visibility="visible"
		tools:text="99" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/photo"
		android:paddingBottom="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="8dp">

		<com.patchr.ui.widgets.AirTextLight
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/distance"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			custom:textId="@string/dummy_title_short"
			tools:text="@string/dummy_title_short" />

		<LinearLayout
			android:id="@+id/type_group"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/name"
			android:layout_below="@+id/name"
			android:layout_marginBottom="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<com.patchr.ui.widgets.AirTextView
				android:id="@+id/type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="2dp"
				android:ellipsize="end"
				android:singleLine="true"
				android:textAllCaps="true"
				android:textAppearance="?attr/textAppearanceExtraSmall"
				android:textColor="?attr/textColorSecondary"
				tools:text="Event Patch" />

			<LinearLayout
				android:id="@+id/privacy_group"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginRight="1dp"
					android:maxHeight="20dp"
					android:maxWidth="20dp"
					android:scaleType="fitCenter"
					android:src="@drawable/ic_action_lock_closed_dark"
					android:tint="@color/brand_primary" />

			</LinearLayout>

		</LinearLayout>

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/distance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?attr/textColorSecondary"
			tools:text="1.3 mi" />

		<com.patchr.ui.widgets.AirTextView
			android:id="@+id/count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/brand_primary"
			tools:text="+24" />

		<LinearLayout
			android:id="@+id/previews"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/name"
			android:layout_below="@+id/type_group"
			android:layout_toLeftOf="@+id/count"
			android:orientation="vertical" />
	</RelativeLayout>

</RelativeLayout>
