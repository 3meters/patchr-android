<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal">

	<LinearLayout
		android:id="@+id/search_group"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="horizontal"
		android:padding="5dp">

		<com.aircandi.ui.widgets.AirTokenCompleteTextView
			android:id="@+id/to"
			android:lineSpacingExtra="10dp"
			android:imeOptions="flagNoExtractUi"
			custom:prefix="@string/label_message_to_prefix"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

	<com.aircandi.ui.widgets.AirListView
		android:id="@+id/list"
		style="@style/form_content_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/search_group"
		android:cacheColorHint="#00000000"
		android:scrollingCache="false"
		android:animationCache="false"
		android:divider="?attr/ruleColor"
		android:dividerHeight="@dimen/rule_divider_height"
		android:listSelector="#00000000"
		android:paddingTop="0dp" />

	<com.aircandi.ui.widgets.AirSquareButton
		android:id="@+id/button_bubble"
		style="@style/button_round"
		android:layout_width="@dimen/button_round_width"
		android:layout_height="@dimen/button_round_height"
		android:layout_centerInParent="true" />

	<ProgressBar
		android:id="@+id/progress"
		style="@style/progress"
		android:layout_width="@dimen/progress_width"
		android:layout_height="@dimen/progress_height"
		android:visibility="gone" />

</com.aircandi.ui.widgets.AirRelativeLayout>