<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/item_row"
	style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false"
	android:padding="10dp">

	<!-- Place context -->

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_alignTop="@+id/holder_content"
		android:layout_marginRight="10dp"
		android:layout_marginTop="2dp"
		android:src="@drawable/img_placeholder_logo_bw"
		custom:sizeHint="@dimen/image_small"
		custom:fitType="fixed" />

	<LinearLayout
		android:id="@+id/holder_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/photo"
		android:orientation="vertical">

		<com.aircandi.ui.widgets.AirTextMedium
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textStyle="bold"
			tools:text="Jay Massena" />

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="4"
			android:textAppearance="?android:attr/textAppearanceSmall"
			tools:text="Started watching: Massena Residence" />

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:ellipsize="end"
			android:maxLines="5" />

		<!-- Photo -->

		<com.aircandi.ui.widgets.AirImageView
			android:id="@+id/photo_big"
			style="@style/selectable_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="8dp"
			android:scaleType="centerCrop"
			custom:aspectRatio="@dimen/aspect_ratio_message_item_image"
			custom:aspectRatioEnabled="true"
			custom:dominantMeasurement="width"
			custom:layout="@layout/widget_webimageview"
			custom:fitType="auto" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="8dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/photo_type"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="center_vertical"
				android:src="?attr/iconMessage"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="4dp"
				android:alpha="0.8"
				android:tint="@color/brand_primary" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/modified_date"
				android:layout_width="match_parent"
				android:layout_gravity="center_vertical"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_height="wrap_content"
				android:textColor="?attr/textColorSecondary"
				tools:text="10:48pm Sept 11" />

		</LinearLayout>

	</LinearLayout>

	<ImageView
		android:id="@+id/alert_indicator"
		android:layout_width="@dimen/image_micro"
		android:layout_height="@dimen/image_micro"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:src="@drawable/img_blue_dot"
		tools:visibility="visible"
		android:visibility="invisible" />

</RelativeLayout>