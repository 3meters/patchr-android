<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.AircandiForm">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<com.aircandi.ui.widgets.AirDrawerLayout
		android:id="@+id/drawer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<FrameLayout
			android:id="@+id/fragment_holder"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerHorizontal="true"
			android:background="?attr/backgroundCardField" />

		<!-- Navigation drawer -->

		<FrameLayout
			android:id="@+id/left_drawer"
			android:layout_width="240dp"
			android:layout_height="match_parent"
			android:layout_gravity="left|start"
			android:background="?attr/backgroundForm">

			<include layout="@layout/widget_drawer_start" />
		</FrameLayout>

		<!-- Notifications drawer -->

		<RelativeLayout
			android:id="@+id/right_drawer"
			android:layout_width="320dp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:background="?attr/backgroundForm">

			<FrameLayout
				android:id="@+id/fragment_holder_notifications"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />

		</RelativeLayout>

	</com.aircandi.ui.widgets.AirDrawerLayout>
</LinearLayout>
