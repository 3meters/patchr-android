<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/entity_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_medium_small"
		android:layout_height="@dimen/image_medium_small"
		android:layout_marginRight="10dp"
		android:paddingBottom="8dp"
		android:paddingLeft="8dp"
		android:paddingTop="8dp"
		android:scaleType="centerCrop"
		custom:layout="@layout/widget_webimageview_candi_view"
		custom:sizeHint="@dimen/image_small"
		custom:sizeType="thumbnail" />

	<com.aircandi.ui.widgets.AirTextLight
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toLeftOf="@+id/distance"
		android:layout_toRightOf="@+id/entity_photo"
		android:ellipsize="end"
		android:paddingTop="8dp"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textStyle="bold" />

	<com.aircandi.ui.widgets.AirTextView
		android:id="@+id/area"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/name"
		android:layout_below="@+id/name"
		android:layout_marginBottom="5dp"
		android:layout_marginLeft="2dp"
		android:ellipsize="end"
		android:singleLine="true"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="?textColorSecondary" />

	<RelativeLayout
		android:id="@+id/holder_owner_edit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/name"
		android:layout_below="@+id/email"
		android:layout_marginBottom="8dp"
		android:orientation="horizontal"
		android:visibility="gone">

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/enabled"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginRight="8dp"
			android:text="@string/label_watcher_enable"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<CheckBox
			android:id="@+id/switch_enable"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/enabled"
			android:onClick="onEnabledClick" />
	</RelativeLayout>

	<com.aircandi.ui.widgets.ComboButton
		android:id="@+id/button_delete"
		style="@style/button"
		android:layout_width="@dimen/button_height"
		android:layout_height="@dimen/button_height"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_centerVertical="true"
		android:onClick="onDeleteRequestClick"
		android:visibility="gone"
		custom:drawable="?attr/iconCancel" />

</merge>