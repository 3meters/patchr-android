<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirSwipeRefreshLayout
	android:id="@+id/swipe_notifications"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/backgroundCardField">

	<com.aircandi.ui.widgets.AirDrawerListView
		android:id="@+id/list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animationCache="false"
		android:cacheColorHint="#00000000"
		android:divider="?attr/ruleColor"
		android:dividerHeight="@dimen/rule_divider_height"
		android:footerDividersEnabled="false"
		android:headerDividersEnabled="false"
		android:listSelector="#00000000"
		android:scrollbars="none"
		android:scrollingCache="false" />

</com.aircandi.ui.widgets.AirSwipeRefreshLayout>