<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	android:id="@+id/refresh_frame"
	style="@style/selectable_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:addStatesFromChildren="true"
	android:clickable="true"
	android:clipToPadding="false"
	android:gravity="center"
	android:minWidth="@dimen/action_button_min_width"
	tools:ignore="Overdraw">

	<!-- textview is a hack to force the action bar button to the height we want -->

	<com.aircandi.ui.widgets.AirTextView
		style="@style/actionbar_beacons"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/action_bar_default_height"
		android:layout_gravity="center"
		android:focusable="false"
		android:gravity="center"
		android:visibility="invisible" />

	<View
		android:id="@+id/accuracy_indicator"
		android:layout_width="35dp"
		android:layout_height="@dimen/action_bar_default_height"
		android:layout_gravity="center"
		android:visibility="gone" />

	<View
		android:id="@+id/accuracy_center"
		android:layout_width="7dp"
		android:layout_height="7dp"
		android:layout_gravity="center"
		android:visibility="gone" />

	<ImageView
		android:id="@+id/refresh_image"
		style="@style/actionbar_beacons"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:src="?attr/iconActionRefresh" />

	<ProgressBar
		android:id="@+id/refresh_progress"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_gravity="center"
		android:focusable="true"
		android:visibility="gone" />

</FrameLayout>