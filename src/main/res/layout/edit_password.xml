<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include
		android:id="@+id/toolbar"
		layout="@layout/include_toolbar_actionbar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:fillViewport="true">

		<!-- Password -->

		<LinearLayout
			style="@style/form_content_layout"
			android:layout_width="288dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="16dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="8dp"
				android:text="@string/form_title_password_edit"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="@color/brand_accent_darker"
				android:textSize="30sp" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/password_old"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_password_old"
				android:inputType="textPassword" />

			<com.patchr.ui.widgets.AirEditText
				android:id="@+id/password"
				style="@style/form_edit"
				android:layout_width="match_parent"
				android:layout_height="@dimen/form_field_height"
				android:layout_marginBottom="8dp"
				android:drawableRight="?attr/iconClear"
				android:hint="@string/label_password"
				android:inputType="textPassword" />

			<Button
				android:id="@+id/forgot_password_button"
				style="@style/button_link"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_weight="1"
				android:onClick="onClick"
				android:text="@string/button_forgot_password" />

		</LinearLayout>

	</ScrollView>
</LinearLayout>