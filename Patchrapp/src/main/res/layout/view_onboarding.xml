<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

	android:id="@+id/invite"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background_form"
	android:orientation="horizontal"
	android:padding="16dp">

	<ImageView
		android:id="@+id/user_photo"
		android:layout_width="@dimen/image_medium_small"
		android:layout_height="@dimen/image_medium_small"
		android:scaleType="centerCrop"
		tools:src="@drawable/img_dummy" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="12dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textColor="@color/black"
			tools:text="Larissa Massena invited you to join this patch." />

		<TextView
			android:id="@+id/member"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginTop="8dp"
			android:lines="1"
			android:textColor="@color/brand_accent_darker"
			tools:text="You are a member of this patch!" />

		<LinearLayout
			android:id="@+id/buttons"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:orientation="horizontal">

			<Button
				android:id="@+id/action1_button"
				style="@style/button_outlined"
				android:layout_width="110dp"
				android:layout_height="@dimen/button_height"
				android:layout_marginEnd="4dp"
				android:layout_marginRight="4dp"
				android:text="@string/button_login"
				android:textSize="16sp"
				tools:text="LOG IN" />

			<Button
				android:id="@+id/action2_button"
				style="@style/button_outlined"
				android:layout_width="110dp"
				android:layout_height="@dimen/button_height"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="4dp"
				android:layout_marginStart="4dp"
				android:text="@string/button_signup"
				android:textSize="16sp"
				tools:text="SIGN UP" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
