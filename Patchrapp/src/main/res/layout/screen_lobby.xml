<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.LobbyScreen">

	<ImageView
		android:id="@+id/image_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/patchr_splash" />

	<ImageView
		android:id="@+id/logo_startup"
		android:layout_width="72dp"
		android:layout_height="72dp"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_img_patch_dark"
		android:visibility="visible" />

	<LinearLayout
		android:id="@+id/dialog"
		android:layout_width="228dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:alpha="0"
		android:orientation="vertical"
		android:paddingBottom="96dp"
		android:visibility="visible"
		tools:alpha="1"
		tools:ignore="UselessParent"
		tools:visibility="visible">

		<ImageView
			android:id="@+id/logo"
			android:layout_width="72dp"
			android:layout_height="72dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="4dp"
			android:src="@drawable/ic_img_patch_dark" />

		<TextView
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="8dp"
			android:gravity="center"
			android:text="@string/name_app"
			android:textColor="@color/white"
			android:textSize="48sp" />

		<Button
			android:id="@+id/login_button"
			style="@style/button_raised"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:layout_marginBottom="8dp"
			android:background="@drawable/bg_outlined_white"
			android:onClick="onClick"
			android:text="@string/lobby_button_login"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="16sp" />

		<Button
			android:id="@+id/signup_button"
			style="@style/button_raised"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:layout_marginBottom="8dp"
			android:background="@drawable/bg_outlined_white"
			android:onClick="onClick"
			android:text="@string/lobby_button_signup"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="16sp" />

	</LinearLayout>

</RelativeLayout>
