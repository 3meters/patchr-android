<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="com.aircandi.catalina"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:installLocation="auto">

	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:resizeable="true"
		android:smallScreens="true"
		android:xlargeScreens="true" />

	<uses-feature
		android:glEsVersion="0x00020000"
		android:required="true" />

	<permission
		android:name="com.aircandi.catalina.permission.MAPS_RECEIVE"
		android:protectionLevel="signature" />
	<permission
		android:name="com.aircandi.catalina.permission.C2D_MESSAGE"
		android:protectionLevel="signature" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

	<!-- Support location -->

	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

	<!-- Support network and wifi interactions -->

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

	<!-- Support play services -->

	<uses-permission android:name="com.aircandi.catalina.permission.MAPS_RECEIVE" />
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
	<uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

	<!-- To support GCM -->

	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<uses-permission android:name="com.aircandi.catalina.permission.C2D_MESSAGE" />

	<!-- To support Notifications -->

	<uses-permission android:name="android.permission.VIBRATE" />

	<!-- Needed to trigger a wifi scan -->

	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

	<application
		android:name="com.aircandi.catalina.Catalina"
		android:allowBackup="false"
		android:icon="@drawable/ic_launcher"
		android:label="@string/name_app"
		android:theme="@style/aircandi_theme_midnight"
		tools:replace="android:allowBackup">

		<!-- Service keys -->

		<meta-data
			android:name="com.google.android.maps.v2.API_KEY"
			android:value="AIzaSyCq-TgeWzyK-iUod3Bs9uRpj4992xGlEZ8" />
		<meta-data
			android:name="com.crashlytics.ApiKey"
			android:value="3f03e3891f0d0c56c4bc1c393db5efe2aa0f90c7" />
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />

		<!-- Services -->

		<service
			android:name="com.aircandi.catalina.components.GcmIntentService"
			android:enabled="true" />
		<service
			android:name="com.aircandi.components.ActivityRecognitionService"
			android:exported="false"
			android:label="@string/name_app" />

		<!-- Receivers -->

		<receiver
			android:name="com.aircandi.catalina.components.GcmBroadcastReceiver"
			android:permission="com.google.android.c2dm.permission.SEND">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<action android:name="com.google.android.c2dm.intent.REGISTRATION" />

				<category android:name="com.aircandi.catalina" />
			</intent-filter>
		</receiver>

		<!-- Activities -->

		<activity
			android:name="com.aircandi.catalina.ui.SplashForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_midnight_notitlebar"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.aircandi.catalina.ui.AircandiForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app">
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>
		<activity
			android:name="com.aircandi.catalina.ui.PlaceForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />

				<data android:host="candipatch.com" />
				<data android:pathPrefix="/patch" />
				<data android:pathPrefix="/place" />
				<data android:scheme="http" />
				<data android:scheme="https" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.aircandi.catalina.ui.MessageForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_message"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />

				<data android:host="candipatch.com" />
				<data android:pathPrefix="/message" />
				<data android:scheme="http" />
				<data android:scheme="https" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.aircandi.ui.EntityList"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.catalina.ui.WatcherList"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.HelpForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app"
			android:theme="@style/aircandi_theme_midnight_transparent"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.PhotoForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.MapForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app_lowercase"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.AboutForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app"
			android:windowSoftInputMode="stateHidden" />

		<!-- Editing activities -->

		<activity
			android:name="com.aircandi.catalina.ui.edit.MessageEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />

				<category android:name="android.intent.category.DEFAULT" />

				<data android:mimeType="text/plain" />
				<data android:mimeType="image/*" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.aircandi.catalina.ui.edit.PlaceEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app_lowercase"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.edit.TuningEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app_lowercase"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.edit.InviteEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_invite"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.aircandi.ui.edit.FeedbackEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_feedback"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.aircandi.ui.edit.ReportEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_report"
			android:windowSoftInputMode="adjustResize" />

		<!-- User activities -->

		<activity
			android:name="com.aircandi.catalina.ui.user.UserForm"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/name_app"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.user.UserEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_profile"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.user.SignInEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_signin"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.aircandi.ui.user.RegisterEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_signup"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.user.ResetEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_reset"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.user.PasswordEdit"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/form_title_password"
			android:windowSoftInputMode="stateHidden" />

		<!-- Builders/pickers -->

		<activity
			android:name="com.aircandi.ui.helpers.PhotoPicker"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.helpers.PlacePicker"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.helpers.ApplicationPicker"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_dialog_dark"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.helpers.PhotoSourcePicker"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_dialog_dark"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.helpers.ShortcutPicker"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_dialog_dark"
			android:windowSoftInputMode="stateHidden" />
		<activity
			android:name="com.aircandi.ui.helpers.AddressBuilder"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_dialog_dark"
			android:windowSoftInputMode="adjustResize" />
		<activity
			android:name="com.aircandi.ui.helpers.CategoryBuilder"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:theme="@style/aircandi_theme_dialog_dark"
			android:windowSoftInputMode="stateHidden" />

		<!-- Misc -->

		<activity
			android:name="com.aircandi.ui.Preferences"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:exported="false">
			<intent-filter>
				<action android:name="com.aircandi.Preferences" />

				<category android:name="android.intent.category.PREFERENCE" />
			</intent-filter>
		</activity>
	</application>

