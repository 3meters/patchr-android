<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aircandi.ui.widgets.AirSwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" >

        <com.aircandi.ui.widgets.AirListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="?attr/backgroundCardField"
            android:cacheColorHint="#00000000"
            android:clipToPadding="false"
            android:divider="@null"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:scrollbars="none" />
    </com.aircandi.ui.widgets.AirSwipeRefreshLayout>

    <com.aircandi.ui.widgets.AirSquareButton
        android:id="@+id/button_special"
        style="@style/button_round"
        android:layout_width="@dimen/button_round_width"
        android:layout_height="@dimen/button_round_height"
        android:layout_centerInParent="true" />

</RelativeLayout>