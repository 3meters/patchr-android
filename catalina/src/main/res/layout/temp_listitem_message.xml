<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_row"
    style="@style/selectable_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundCard"
    android:baselineAligned="false"
    android:clickable="true"
    android:onClick="onEntityClick"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/holder_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holder_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.aircandi.ui.widgets.AirTextLight
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/textAppearanceSmall"
            android:textColor="?attr/textColorSecondary" />

        <ImageView
            android:id="@+id/badge_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:src="?attr/iconWatch" />
    </LinearLayout>

    <com.aircandi.ui.widgets.AirImageView
        android:id="@+id/user_photo"
        style="@style/selectable_image"
        android:layout_width="@dimen/image_small"
        android:layout_height="@dimen/image_small"
        android:layout_alignTop="@+id/holder_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:onClick="onEntityClick"
        android:src="@drawable/img_placeholder_logo_bw"
        custom:sizeHint="@dimen/image_small"
        custom:sizeType="thumbnail" />

    <LinearLayout
        android:id="@+id/holder_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder_place"
        android:layout_toRightOf="@+id/user_photo"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/holder_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" >

            <com.aircandi.ui.widgets.AirTextMedium
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/symbol_at"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/user_name"
                android:paddingTop="2dp"
                android:src="@drawable/ic_action_playback_play"
                android:tint="@color/brand_primary" />

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/to_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/created_date"
                android:layout_toRightOf="@+id/symbol_at"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/textSelector" />

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="?attr/textColorSecondary" />
        </RelativeLayout>

        <com.aircandi.ui.widgets.AirTextLight
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5" />

        <com.aircandi.ui.widgets.AirImageView
            android:id="@+id/entity_photo"
            style="@style/selectable_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            custom:aspectRatio="@dimen/aspect_ratio_message_item_image"
            custom:aspectRatioEnabled="true"
            custom:dominantMeasurement="width"
            custom:layout="@layout/widget_webimageview"
            custom:sizeHint="@dimen/image_super_large"
            custom:sizeType="fullsize_capped" />

        <RelativeLayout
            android:id="@+id/footer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_primary" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>