<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	style="@style/selectable_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="10dp">

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/user_photo"
		style="@style/selectable_image"
		android:layout_width="@dimen/image_small"
		android:layout_height="@dimen/image_small"
		android:layout_marginRight="10dp"
		android:layout_weight="0"
		android:clickable="true"
		android:onClick="onEntityClick"
		custom:layout="@layout/widget_webimageview_framed"
		custom:sizeType="thumbnail"
		custom:sizeHint="@dimen/image_small" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:baselineAligned="false"
		android:orientation="horizontal"
		android:paddingRight="10dp"
		android:visibility="visible">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_weight="1"
			android:orientation="vertical">

			<com.aircandi.ui.widgets.AirTextView
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/dummy_name"
				android:textStyle="bold"
				custom:textId="@string/dummy_name" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/subtitle"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginBottom="5dp"
				android:singleLine="false"
				android:text="@string/dummy_subtitle_notification"
				android:textColor="?attr/textColorSecondary"
				custom:textId="@string/dummy_subtitle_notification" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/description"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginBottom="8dp"
				android:ellipsize="end"
				android:maxLines="3"
				android:text="@string/dummy_description"
				custom:textId="@string/dummy_description" />

			<com.aircandi.ui.widgets.AirTextLight
				android:id="@+id/timesince"
				style="@style/candi_user"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/dummy_timesince"
				android:textColor="?attr/textColorSecondary"
				custom:textId="@string/dummy_timesince" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/shortcut_one"
			style="@style/selectable_item"
			android:layout_width="@dimen/image_medium_small"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:onClick="onShortcutClick"
			android:orientation="vertical">

			<com.aircandi.ui.widgets.AirImageView
				android:id="@+id/photo_one"
				android:layout_width="@dimen/image_medium_small"
				android:layout_height="@dimen/image_medium_small"
				android:scaleType="centerCrop"
				custom:layout="@layout/widget_webimageview_framed"
				custom:showBusy="true"
				custom:sizeType="thumbnail"
				custom:sizeHint="@dimen/image_medium_small" />

			<com.aircandi.ui.widgets.AirTextView
				android:id="@+id/name_one"
				android:layout_width="@dimen/image_medium_small"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="center_horizontal"
				android:maxLines="3"
				android:textAppearance="@style/textAppearanceExtraSmall"
				android:visibility="visible"
				custom:sizeHint="@dimen/image_medium_small" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>