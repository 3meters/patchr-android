<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true" >

    <!-- Content -->

    <RelativeLayout
        style="@style/form_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.aircandi.ui.widgets.AirTextLight
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/brand_primary"
            android:visibility="visible"
            custom:textId="@string/dummy_name" />

        <!-- Photo -->

        <LinearLayout
            android:id="@+id/photo_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <com.aircandi.ui.widgets.AirImageView
                android:id="@+id/entity_photo"
                style="@style/picture_framed"
                android:layout_width="@dimen/image_medium"
                android:layout_height="@dimen/image_medium"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:minWidth="@dimen/image_medium"
                android:onClick="onChangePhotoButtonClick"
                android:scaleType="centerCrop"
                custom:layout="@layout/widget_webimageview_candi_view"
                custom:showBusy="true"
                custom:sizeHint="@dimen/image_medium"
                custom:sizeType="thumbnail" />

            <com.aircandi.ui.widgets.ComboButton
                style="@style/button_link"
                android:layout_width="@dimen/button_width_min"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_vertical"
                android:onClick="onChangePhotoButtonClick"
                custom:label="@string/button_change_picture" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_holder"
            android:layout_marginBottom="8dp"
            android:orientation="vertical" >

            <!-- Type -->

            <Spinner
                android:id="@+id/type_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:layout_marginBottom="8dp"
                android:spinnerMode="dialog"
                android:visibility="gone" />

            <!-- Title and Content -->

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:layout_marginBottom="8dp"
                android:drawableRight="?attr/iconClear"
                android:hint="@string/label_link_edit_name"
                android:inputType="textCapSentences|textNoSuggestions" />

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/app_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:layout_marginBottom="8dp"
                android:drawableRight="?attr/iconClear"
                android:hint="@string/label_link_edit_app_id"
                android:inputType="textNoSuggestions" />

            <com.aircandi.ui.widgets.AirEditText
                android:id="@+id/app_url"
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_field_height"
                android:layout_marginBottom="8dp"
                android:drawableRight="?attr/iconClear"
                android:hint="@string/label_link_edit_app_url"
                android:inputType="textNoSuggestions|textUri"
                android:maxLines="2"
                android:minHeight="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/holder_authoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/body_holder"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.aircandi.ui.widgets.UserView
                    android:id="@+id/created_by"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:onClick="onEntityClick"
                    custom:layout="@layout/widget_user_view_detailed" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.aircandi.ui.widgets.UserView
                    android:id="@+id/edited_by"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:clickable="true"
                    android:onClick="onEntityClick"
                    custom:layout="@layout/widget_user_view_detailed" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</com.aircandi.ui.widgets.AirScrollView>