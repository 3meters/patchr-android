<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:onClick="onCheckedClick"
	android:padding="5dp">

	<CheckBox
		android:id="@+id/checked"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="20dp" />

	<RelativeLayout
		android:id="@+id/holder_info"
		style="@style/selectable_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_toRightOf="@+id/checked"
		android:clickable="true"
		android:onClick="onListItemClick"
		android:paddingRight="10dp"
		android:orientation="horizontal">

		<com.aircandi.ui.widgets.AirImageView
			android:id="@+id/entity_photo"
			style="@style/selectable_image"
			android:layout_width="@dimen/image_small"
			android:layout_height="@dimen/image_small"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:scaleType="centerCrop"
			custom:layout="@layout/widget_webimageview"
			custom:showBusy="true"
			custom:sizeType="thumbnail"
			custom:sizeHint="@dimen/image_small" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/type"
			style="@style/form_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/entity_photo"
			android:ellipsize="end"
			android:maxLines="1"
			android:paddingLeft="2dp"
			android:textColor="@color/brand_primary"
			custom:textId="@string/dummy_type" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/name"
			style="@style/form_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/type"
			android:layout_toRightOf="@+id/entity_photo"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="?attr/textColor"
			custom:textId="@string/dummy_name" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/app_id"
			style="@style/form_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/name"
			android:layout_toRightOf="@+id/entity_photo"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="?attr/textColorSecondary"
			custom:textId="@string/dummy_name" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/app_url"
			style="@style/form_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/app_id"
			android:layout_toRightOf="@+id/entity_photo"
			android:ellipsize="end"
			android:maxLines="1"
			android:singleLine="true"
			android:textColor="?attr/textColorSecondary"
			custom:textId="@string/dummy_web_address" />

		<com.aircandi.ui.widgets.AirTextView
			android:id="@+id/alert"
			style="@style/form_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/app_url"
			android:layout_toRightOf="@+id/entity_photo"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="?attr/textColorAlert"
			android:visibility="gone"
			custom:textId="@string/dummy_alert" />
	</RelativeLayout>

</RelativeLayout>