<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        style="@style/form_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/holder_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <!-- Title and Content -->

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/image_medium_small"
                android:layout_height="@dimen/image_medium_small"
                android:layout_gravity="center_horizontal"
                android:tint="@color/brand_primary"
                android:layout_marginBottom="15dp"
                android:src="?attr/imgLogo" />

            <com.aircandi.ui.widgets.AirTextLight
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/name_app"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/brand_primary"
                custom:textId="@string/name_app" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/app_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/name_app_family"
                custom:textId="@string/app_family_attribution"
                android:visibility="gone" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dummy_version"
                custom:textId="@string/dummy_version" />

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="@string/dummy_copyright"
                custom:textId="@string/dummy_copyright" />

            <com.aircandi.ui.widgets.ComboButton
                android:id="@+id/button_terms"
                style="@style/button_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="8dp"
                android:minWidth="200dp"
                android:onClick="onTermsButtonClick"
                custom:label="@string/button_terms" />

            <com.aircandi.ui.widgets.ComboButton
                android:id="@+id/button_legal"
                style="@style/button_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="8dp"
                android:onClick="onLegalButtonClick"
                custom:label="@string/button_legal" />

            <com.aircandi.ui.widgets.ComboButton
                android:id="@+id/button_privacy"
                style="@style/button_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:onClick="onPrivacyButtonClick"
                custom:label="@string/button_privacy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/holder_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/holder_body"
            android:baselineAligned="false"
            android:gravity="bottom"
            android:visibility="gone"
            android:orientation="vertical" >

            <com.aircandi.ui.widgets.AirTextView
                android:id="@+id/install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/label_about_install"
                custom:textId="@string/label_about_install" />

            <TableLayout
                android:id="@+id/holder_install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_id"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary"
                        custom:textId="@string/dummy_install_id" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rule_divider_height"
                    android:background="?attr/ruleColor" />

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary"
                        custom:textId="@string/dummy_install_type" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rule_divider_height"
                    android:background="?attr/ruleColor" />

                <TableRow>

                    <com.aircandi.ui.widgets.AirTextView
                        android:id="@+id/install_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_install_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?attr/textColorSecondary"
                        custom:textId="@string/dummy_install_date" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

</com.aircandi.ui.widgets.AirScrollView>