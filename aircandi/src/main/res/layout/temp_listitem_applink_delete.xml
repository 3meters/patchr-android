<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="5dp">

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/entity_photo"
		android:layout_width="@dimen/image_extra_small"
		android:layout_height="@dimen/image_extra_small"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp"
		android:scaleType="centerCrop"
		custom:layout="@layout/widget_webimageview"
		custom:sizeType="thumbnail"
		custom:sizeHint="@dimen/image_extra_small" />

	<com.aircandi.ui.widgets.AirTextView
		android:id="@+id/name"
		style="@style/form_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/entity_photo"
		android:ellipsize="end"
		android:textAppearance="@style/textAppearance"
		android:textColor="?attr/textColor"
		custom:textId="@string/dummy_name" />

</RelativeLayout>