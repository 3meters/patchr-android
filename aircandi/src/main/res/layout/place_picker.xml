<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/search_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <com.aircandi.ui.widgets.AirEditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_field_height"
            android:drawableLeft="?attr/iconSearch"
            android:drawablePadding="10dp"
            android:drawableRight="?attr/iconClear"
            android:gravity="center|left"
            android:hint="@string/hint_place_search"
            android:inputType="textAutoCorrect"
            android:singleLine="true" />
    </LinearLayout>

    <com.aircandi.ui.widgets.AirListView
        android:id="@+id/list"
        style="@style/form_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_group"
        android:cacheColorHint="#00000000"
        android:divider="?attr/ruleColor"
        android:dividerHeight="@dimen/rule_divider_height"
        android:listSelector="#00000000"
        android:paddingTop="0dp" />

    <com.aircandi.ui.widgets.AirSquareButton
        android:id="@+id/button_special"
        style="@style/button_round"
        android:layout_width="@dimen/button_round_width"
        android:layout_height="@dimen/button_round_height"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/progress"
        android:layout_width="@dimen/progress_width"
        android:layout_height="@dimen/progress_height"
        android:visibility="gone" />

</com.aircandi.ui.widgets.AirRelativeLayout>