<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <com.aircandi.ui.widgets.AirTextLight
        android:id="@+id/content_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundFormSecondary"
        android:padding="16dp"
        custom:textId="@string/feedback_message" />

    <!-- Title and Content -->

    <LinearLayout
        style="@style/form_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/created_by"
        android:layout_below="@+id/content_message"
        android:gravity="center_vertical|top"
        android:orientation="vertical" >

        <com.aircandi.ui.widgets.AirEditText
            android:id="@+id/description"
            style="@style/form_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:hint="@string/hint_feedback"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
            android:isScrollContainer="true"
            android:minLines="10" />
    </LinearLayout>

    <com.aircandi.ui.widgets.UserView
        android:id="@+id/created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/form_body_padding"
        android:layout_marginLeft="@dimen/form_body_padding"
        custom:layout="@layout/widget_user_view_compact" />

</com.aircandi.ui.widgets.AirRelativeLayout>