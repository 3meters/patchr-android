<?xml version="1.0" encoding="utf-8"?>
<com.aircandi.ui.widgets.AirRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="?attr/backgroundHelp"
    android:clickable="true"
    android:onClick="onHelpClick"
    tools:ignore="Overdraw" >

    <com.aircandi.ui.widgets.AirTextLight
        android:id="@+id/add_places"
        style="@style/balloon"
        android:layout_width="@dimen/balloon_width"
        android:layout_height="@dimen/balloon_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/help_place_add"
        android:textAppearance="?android:attr/textAppearanceMedium"
        custom:textId="@string/help_place_add" />

    <com.aircandi.ui.widgets.AirTextLight
        style="@style/balloon"
        android:layout_width="@dimen/balloon_width"
        android:layout_height="@dimen/balloon_height"
        android:layout_below="@+id/add_places"
        android:layout_centerInParent="true"
        android:text="@string/help_place_tune"
        android:textAppearance="?android:attr/textAppearanceMedium"
        custom:textId="@string/help_place_tune" />

</com.aircandi.ui.widgets.AirRelativeLayout>