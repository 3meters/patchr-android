<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="2dp">

	<com.aircandi.ui.widgets.AirImageView
		android:id="@+id/entity_photo"
		style="@style/selectable_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		custom:layout="@layout/widget_webimageview_candi_view"
		custom:sizeHint="@dimen/image_extra_large"
		custom:sizeType="preview" />

	<LinearLayout
		android:id="@+id/info_holder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/overlay_picture"
		android:orientation="vertical"
		android:paddingBottom="5dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:paddingTop="10dp">

		<com.aircandi.ui.widgets.AirTextLight
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/text_dark"
			android:textStyle="bold"
			custom:textId="@string/dummy_title_short" />

		<com.aircandi.ui.widgets.UserView
			android:id="@+id/creator"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			custom:layout="@layout/widget_user_view_grid_overlay" />
	</LinearLayout>

</RelativeLayout>